<!-- Overlay for login/register -->
<div id="loginRegisterOverlay">
    <!-- Login Popup -->
    <div id="loginPopup" class="loginRegisterPopup">
        <span class="closeBtn" id="closeLoginPopup">&times;</span>
        <h2 class="popupHeading">Login</h2>
        <form action="#" method="POST">
            <input type="email" class="inputField" placeholder="Email" required><br>
            <input type="password" class="inputField" placeholder="Password" required><br>
            <button type="submit" class="submitBtn">Login</button>
        </form>
        <div class="toggleBtn">Don't have an account? <a href="#" id="switchToRegister">Register here</a></div>
    </div>

    <!-- Register Popup -->
    <div id="registerPopup" class="loginRegisterPopup">
        <span class="closeBtn" id="closeRegisterPopup">&times;</span>
        <h2 class="popupHeading">Register</h2>
        <form action="#" method="POST">
            <input type="text" class="inputField" placeholder="Username" required><br>
            <input type="email" class="inputField" placeholder="Email" required><br>
            <input type="password" class="inputField" placeholder="Password" required><br>
            <button type="submit" class="submitBtn">Register</button>
        </form>
        <div class="toggleBtn">Already have an account? <a href="#" id="switchToLogin">Login here</a></div>
    </div>
</div>

<script>
    const showLoginBtn = document.getElementById('showLoginBtn');
    const showRegisterBtn = document.getElementById('showRegisterBtn');
    const loginRegisterOverlay = document.getElementById('loginRegisterOverlay');
    const closeLoginPopup = document.getElementById('closeLoginPopup');
    const closeRegisterPopup = document.getElementById('closeRegisterPopup');
    const switchToRegister = document.getElementById('switchToRegister');
    const switchToLogin = document.getElementById('switchToLogin');

    showLoginBtn.onclick = function () {
        loginRegisterOverlay.style.display = 'block';
        document.getElementById('loginPopup').style.display = 'block';
    };

    showRegisterBtn.onclick = function () {
        loginRegisterOverlay.style.display = 'block';
        document.getElementById('registerPopup').style.display = 'block';
    };

    closeLoginPopup.onclick = function () {
        loginRegisterOverlay.style.display = 'none';
        document.getElementById('loginPopup').style.display = 'none';
    };

    closeRegisterPopup.onclick = function () {
        loginRegisterOverlay.style.display = 'none';
        document.getElementById('registerPopup').style.display = 'none';
    };

    switchToRegister.onclick = function () {
        document.getElementById('loginPopup').style.display = 'none';
        document.getElementById('registerPopup').style.display = 'block';
    };

    switchToLogin.onclick = function () {
        document.getElementById('registerPopup').style.display = 'none';
        document.getElementById('loginPopup').style.display = 'block';
    };

    window.onclick = function (event) {
        if (event.target == loginRegisterOverlay) {
            loginRegisterOverlay.style.display = 'none';
            document.getElementById('loginPopup').style.display = 'none';
            document.getElementById('registerPopup').style.display = 'none';
        }
    };
</script>
<script defer src="script.js"></script>
